-- Conky is a monitoring application that is displayed on the desktop
-- @author umutsevdi 

conky.config = {
-- Conky settings
	update_interval = 2,
	override_utf8_locale = true,
	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 2048,

-- Window specifications
	own_window = true,
	own_window_class = 'conky',
	own_window_transparent = true,
	own_window_type = 'override',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	border_inner_margin = 0,
	border_outer_margin = 0,
	alignment = 'center_left',
	gap_x = 25,
	gap_y = 0,

-- Graphics settings
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

-- Text settings
	use_xft = true,
	xftalpha = 0,
	text_buffer_size = 2048,
	font = 'FiraMono:size=11',
	uppercase = false,
    color0 = '#ebdbb2', -- default fg
    color1 = '#FFCE51', -- selection
    color2 = '#F15D22', -- red
    color4 = '#C3BAC6',
    color5 = '#ABE9B3',
    color6 = '#FAE3B0',
	default_color = '#F2CDCD',
};
conky.text = [[
${voffset 15}${color0}${font FiraSans:size=75}${time %b%e}${voffset -30} ${alignr}${color1}${font FiraSans Bold:size=20}${time %A}
${font FiraMono:size=12}${color2}${voffset -10}  ${alignr}${texeci 3600 weather}${voffset -10}
${color0}${font FiraMono:bold:size=100}${time %k:%M}${font}
${voffset 600}
${font FiraSans:bold:size=10}Memory    ${font FiraMono:italic:size=9}  ${mem}  ${membar}
${font FiraSans:bold:size=10}Disk           ${font FiraMono:italic:size=9}  ${fs_used /}   ${fs_bar /}
${font FiraSans:bold:size=10}CPU            ${font FiraMono:italic:size=9}  ${cpu}%        ${cpubar}
${font FiraSans :size=10}${color1}Name                         PID${alignr}CPU%         TIME${font FiraMono :italic:size=9}
${voffset -10}$hr
${voffset -3}${color0}${top name 1} ${top pid 1} ${alignr}${top cpu 1} ${top time 1}
${voffset -3}${color0}${top name 2} ${top pid 2} ${alignr}${top cpu 2} ${top time 2}
${voffset -3}${color0}${top name 3} ${top pid 3} ${alignr}${top cpu 3} ${top time 3}
${voffset -3}${color0}${top name 4} ${top pid 4} ${alignr}${top cpu 4} ${top time 4}
${voffset -3}${color0}${top name 5} ${top pid 5} ${alignr}${top cpu 5} ${top time 5}
]];
